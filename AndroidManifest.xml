<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nandika.hang_out"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.nandika.hang_out.framwork.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nandika.hang_out.activity.WelcomActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.HangOutSettingsActivity"
            android:label="@string/title_activity_hang_out_settings" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.FriendActivity"
            android:label="@string/title_activity_friend" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.NewHangOutActivity"
            android:label="@string/title_activity_new_hang_out" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.FriendListActivity"
            android:label="@string/title_activity_friend_list"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.nandika.hang_out.activity.SetTimeActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/title_activity_set_time" >
        </activity>
    </application>

</manifest>